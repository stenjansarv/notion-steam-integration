{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "rootDir": "lib",
    "declaration": true
  },
  "include": [
    "./lib/**/*"
  ]
}
